
<label for="citySelect">Thành phố:</label>
<select id="citySelect" onchange="loadDistricts()">
    <option value="">Chọn thành phố</option>
    <option value="hcm">TP.HCM</option>
    <option value="bentre">Bến Tre</option>
    <!-- Thêm các thành phố khác nếu cần -->
</select>
<br>

<label for="districtSelect">Quận/Huyện:</label>
<select id="districtSelect">
    <option value="">Chưa chọn thành phố</option>
    <!-- Các quận/huyện của thành phố sẽ được thêm bằng JavaScript -->
</select>
<br>

