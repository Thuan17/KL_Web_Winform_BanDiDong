@model PagedList.PagedList<WSite_CuaHangDienThoai.Models.tb_Store>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Hệ thống cửa hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}


@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý cửa hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách @ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/productdetail/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Loại sản phẩm</th>
                        <th>Hãng</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th>Trang chủ</th>
                        <th>Hot</th>
                        <th>Nổi bật</th>
                        <th>Khuyến mãi</th>

                        <th style="width:150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            var strCheckIsActive = item.IsActive.GetValueOrDefault() ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHome = item.IsHome.GetValueOrDefault() ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHot = item.IsHot.GetValueOrDefault() ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckIsFeature = item.IsFeature.GetValueOrDefault() ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckSale = item.IsSale.GetValueOrDefault() ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";

                            var strImg = "";
                            var CheckImage = item.tb_ProductImage.FirstOrDefault(x => x.IsDefault);
                            if (CheckImage != null)
                            {
                                strImg = CheckImage.Image;
                            }

                            if (item.IsActive == false)
                            {
                                <tr class="text-center opacity-100" id="trow_@item.ProductDetaiId">
                                    <td><input type="checkbox" class="cbkItem" value="@item.ProductDetaiId" /></td>
                                    <td>@i</td>
                                    <td><img class="imgproduct" data-id="@item.ProductDetaiId" src="@strImg" width="50" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.tb_ProductCategory.Title</td>
                                    <td>
                                        @item.tb_ProductCompany.Title
                                        @*@Html.Action("Partail_ProductDetail", "Product", new { id = item.ProductId })*@
                                    </td>
                                    <td>@WSite_CuaHangDienThoai.Common.Common.FormatNumber(item.Price)</td>
                                    <td>@*@item.CreatedBy.ToString("dd/MM/yyyy")*@</td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsActive">@Html.Raw(strCheckIsActive)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsHome">@Html.Raw(strCheckHome)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsHot">@Html.Raw(strCheckHot)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsFeature">@Html.Raw(strCheckIsFeature)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsSale">@Html.Raw(strCheckSale)</a>
                                    </td>
                                    <td>
                                        @*<a href="/admin/Product/edit/@item.ProductId" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xóa</a>*@

                                        <a href="/admin/Product/Detail/@item.ProductDetaiId" data-id="@item.ProductDetaiId" class="btn btn-sm btn-primary ">Xem</a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr class="text-center" id="trow_@item.ProductDetaiId">
                                    <td><input type="checkbox" class="cbkItem" value="@item.ProductDetaiId" /></td>
                                    <td>@i</td>
                                    <td><img class="imgproduct" data-id="@item.ProductDetaiId" src="@strImg" width="50" /></td>
                                    <td>@item.Title</td>
                                    <td>@item.tb_ProductCategory.Title</td>
                                    <td>
                                        @item.tb_ProductCompany.Title
                                        @*@Html.Action("Partail_ProductDetail", "Product", new { id = item.ProductId })*@
                                    </td>
                                    <td>@WSite_CuaHangDienThoai.Common.Common.FormatNumber(item.Price)</td>
                                    <td>@*@item.CreatedBy.ToString("dd/MM/yyyy")*@</td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsActive">@Html.Raw(strCheckIsActive)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsHome">@Html.Raw(strCheckHome)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsHot">@Html.Raw(strCheckHot)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsFeature">@Html.Raw(strCheckIsFeature)</a>
                                    </td>
                                    <td class="text-center">
                                        <a href='#' data-id="@item.ProductDetaiId" class="btnIsSale">@Html.Raw(strCheckSale)</a>
                                    </td>
                                    <td>
                                        @*<a href="/admin/Product/edit/@item.ProductId" class="btn btn-sm btn-primary">Sửa</a>
                                            <a href="#" data-id="@item.ProductId" class="btn btn-sm btn-danger btnDelete">Xóa</a>*@

                                        <a href="/admin/Product/Detail/@item.ProductDetaiId" data-id="@item.ProductDetaiId" class="btn btn-sm btn-primary ">Xem</a>
                                        <a href="/admin/ProductDetail/Edit/@item.ProductDetaiId" data-id="@item.ProductDetaiId" class="btn btn-sm btn-primary ">Sửa</a>
                                    </td>
                                </tr>

                            }

                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!!!</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
